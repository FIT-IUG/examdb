@using PagedList.Mvc
@model PagedList.IPagedList<exam_db.Models.Item>

@{
    ViewBag.Title = "Search";
}
<style>
    .pagination {
        font-size: 18px;
        text-decoration: none;
    }
</style>
<link href="~/Content/search.css" rel="stylesheet" />
<div class="container">

    <div class="search_page">

        <nav class="pagination_nav">

            <h4 class="search_page_title">Search Results</h4>

            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount

            <ul class="pagination">
                @Html.PagedListPager(Model, page => Url.Action("Search", "Home", new
           {
               @class = "page-link",
               page,
               search = Request.QueryString["search"],
               mid = Request.QueryString["mid"],
               final = Request.QueryString["final"],
               all = Request.QueryString["all"],
               quiz=Request.QueryString["quiz"],
               summary=Request.QueryString["summary"],
               year=Request.QueryString["year"]
           }),
     new PagedListRenderOptions()
     {
         LiElementClasses = new string[] { "page-item" }
     })


            </ul>

        </nav>



