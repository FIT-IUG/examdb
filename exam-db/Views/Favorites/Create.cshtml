@model exam_db.Models.Favorite

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Favorite</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
