@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()


        <div class="dropdown">
            <div class="dropdown-toggle" id="dropdownUserMenu"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img class="navbar-user-img" src="~/Content/images/avatar.png" />
                <span class="username">
                    
                                <a href="~/Manage/Index" class="black_link bold_custom">@User.Identity.GetUserName()</a>
                            </span>

            </div>

            <div class="dropdown-menu dropdownUserMenu animated fadeInDown faster" aria-labelledby="dropdownUserMenu">
                <a class="dropdown-item bold_custom dropdownUserMenu_item " href="~/Home/Profile"><i class="fa fa-user-circle-o"></i> @Resources.Global.UserMenu_Profile</a>
                <a class="dropdown-item bold_custom dropdownUserMenu_item" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> @Resources.Global.UserMenu_Logout</a>
            </div>
        </div>

    }
}
else
{
    <ul class="nav navbar-nav login_register_nav">
        <li  class="nav-item"><a class="nav-link" href="~/Account/Register" id="registerLink"><i class="fa fa-user-plus"></i> @Resources.Global.Sign_up</a></li>
        <li  class="nav-item"><a class="nav-link" href="~/Account/Login" id="loginLink"><i class="fa fa-sign-in"></i> @Resources.Global.Login</a></li>
    </ul>
}
